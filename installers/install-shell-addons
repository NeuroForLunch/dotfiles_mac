#!/usr/bin/env bash

# change shell to zsh and set as default
chsh -s /bin/zsh

# symlink folders
ln -sF ~/.dotfiles/settings/zsh/zprezto ~/.zprezto
ln -sF ~/.dotfiles/settings/zsh ~/.zsh

# symlink zsh and prezto configuration
ln -sF ~/.dotfiles/settings/zsh/zshrc ~/.zshrc
ln -sF ~/.dotfiles/settings/zsh/zlogin ~/.zlogin
ln -sF ~/.dotfiles/settings/zsh/zprofile ~/.zprofile
ln -sF ~/.dotfiles/settings/zsh/zshenv ~/.zshenv
ln -sF ~/.dotfiles/settings/zsh/zpreztorc ~/.zpreztorc

ln -sF ~/.dotfiles/settings/zsh/setting-ctags ~/.ctags
